<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UpdateActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_contactUd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/contact"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />


    <TextView
        android:id="@+id/tv_showNameUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:textSize="25dp"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintLeft_toLeftOf="@id/guideline21"
        />
    <EditText
        android:id="@+id/edt_firstNameUpdate"
        android:hint="FirstName"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_showNameUpdate"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintLeft_toRightOf="@id/guideline21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_lastNameUpdate"
        android:hint="LastName"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/edt_firstNameUpdate"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintLeft_toRightOf="@id/guideline21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />
    <Button
        android:id="@+id/btn_update"
        android:text="update"
        app:layout_constraintTop_toBottomOf="@id/edt_lastNameUpdate"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:background="#ffffff"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>