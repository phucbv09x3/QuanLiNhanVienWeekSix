<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="10dp"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_name"
        android:text="Name"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_showNameEm"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="#000000"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        android:layout_marginLeft="15dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_ageEm"
        android:text="Age"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="120dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_showAgeEm"
        android:text="ShowAge"
        app:layout_constraintLeft_toRightOf="@id/tv_ageEm"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="#000000"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_ageEm"
        android:layout_marginLeft="15dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_salary"
        android:text="Salary"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="120dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ageEm"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_showSalaryEm"
        android:text="ShowSalary"
        app:layout_constraintLeft_toRightOf="@id/tv_ageEm"
        android:layout_width="0dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_salary"
        android:layout_marginLeft="15dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>