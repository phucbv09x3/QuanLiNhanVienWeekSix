<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddEmployeeActivity">
    <TextView
        android:id="@+id/tv_id"
        android:text="Id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_showId"
        android:hint="Id"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_id"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_name"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="90dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_showName"
        android:hint="Name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_age"
        android:text="Age"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="90dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_showAge"
        android:hint="Age"
        app:layout_constraintLeft_toRightOf="@id/tv_age"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_age"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_salary"
        android:text="Salary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="90dp"
        app:layout_constraintTop_toBottomOf="@id/tv_age"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_showSalary"
        android:hint="Salary"
        app:layout_constraintLeft_toRightOf="@id/tv_age"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_salary"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_acceptAdd"
        android:text="Accept Add"
        app:layout_constraintTop_toBottomOf="@id/tv_salary"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>